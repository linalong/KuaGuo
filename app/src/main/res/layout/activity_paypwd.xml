<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray14"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_title"
        layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="旧密码："
            android:textColor="@color/blue8"
            android:textSize="@dimen/textsize_3" />


        <com.heizi.mycommon.view.PayPsdInputView
            android:id="@+id/pwd_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            app:maxCount="6"
            app:psdType="weChat"
            app:rectAngle="5dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="支付密码："
        android:textColor="@color/blue8"
        android:textSize="@dimen/textsize_3" />

    <com.heizi.mycommon.view.PayPsdInputView
        android:id="@+id/pwd_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        app:maxCount="6"
        app:psdType="weChat"
        app:rectAngle="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="设置6位数字密码："
        android:textColor="@color/gray16"
        android:textSize="@dimen/textsize_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="确认密码："
        android:textColor="@color/blue8"
        android:textSize="@dimen/textsize_3" />

    <com.heizi.mycommon.view.PayPsdInputView
        android:id="@+id/pwd_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        app:maxCount="6"
        app:psdType="weChat"
        app:rectAngle="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_common_bg"
        android:gravity="center"
        android:text="@string/tijiaoshezhi"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_3" />


</LinearLayout>
